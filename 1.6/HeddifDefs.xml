<Defs>
<HediffDef>
    <defName>SEG_RadBuildup</defName>
    <label>rad-poisoning</label>
    <description>The deleterious effects of being exposed to radiation. Will slowly go away on its own, but very likely to cause cancers and severely weakens pawns.</description>
    <hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(0, 1, 0)</defaultLabelColor>
    <lethalSeverity>1</lethalSeverity>
    <canApplyDodChanceForCapacityChanges>true</canApplyDodChanceForCapacityChanges>
    <makesSickThought>true</makesSickThought>
    <scenarioCanAdd>true</scenarioCanAdd>
    <taleOnVisible>ToxicityRevealed</taleOnVisible>
    <initialSeverity> 0.01</initialSeverity>


    <comps>
        <li Class="HediffCompProperties_Immunizable">
            <compClass>HediffComp_ImmunizableToxic</compClass>
            <severityPerDayNotImmune>-0.01</severityPerDayNotImmune>
        </li>
        <li Class="HediffCompProperties_SurgeryInspectable">
            <surgicalDetectionDesc>{PAWN_nameDef} is showing signs of radiation exposure.</surgicalDetectionDesc>
        </li>
    </comps>

    <stages>
        <li>
            <label>initial</label>
            <becomeVisible>false</becomeVisible>
        </li>

        <li>
            <label>initial</label>
            <minSeverity>0.04</minSeverity>
            <capMods>
                <li>
                    <capacity>Consciousness</capacity>
                    <offset>-0.05</offset>
                </li>
                <li>
                    <capacity>BloodFiltration</capacity>
                    <offset>-0.20</offset>
                </li>
            </capMods>
            <hediffGivers>
                <li Class="HediffGiver_Random">
                    <hediff>Carcinoma</hediff>
                    <mtbDays>400</mtbDays>
                    <canAffectAnyLivePart>true</canAffectAnyLivePart>
                </li>
            </hediffGivers>
        </li>

        <li>
            <label>minor</label>
            <minSeverity>0.20</minSeverity>
            <vomitMtbDays>1</vomitMtbDays>
            <capMods>
                <li>
                    <capacity>Consciousness</capacity>
                    <offset>-0.10</offset>
                </li>
                <li>
                    <capacity>BloodFiltration</capacity>
                    <offset>-0.15</offset>
                </li>
                  <li>
                    <capacity>BloodFiltration</capacity>
                    <offset>-0.10</offset>
                </li>
            </capMods>
            <hediffGivers>
                <li Class="HediffGiver_Random">
                    <hediff>Carcinoma</hediff>
                    <mtbDays>250</mtbDays>
                    <canAffectAnyLivePart>true</canAffectAnyLivePart>
                </li>
            </hediffGivers>
        </li>

        <li>
            <label>moderate</label>
            <minSeverity>0.40</minSeverity>
            <vomitMtbDays>2</vomitMtbDays>
            <capMods>
                <li>
                    <capacity>Consciousness</capacity>
                    <offset>-0.15</offset>
                </li>
                <li>
                    <capacity>BloodFiltration</capacity>
                    <offset>-0.30</offset>
                </li>
            </capMods>
            <hediffGivers>
                <li Class="HediffGiver_Random">
                    <hediff>Carcinoma</hediff>
                    <mtbDays>150</mtbDays>
                    <canAffectAnyLivePart>true</canAffectAnyLivePart>
                </li>
            </hediffGivers>
        </li>

        <li>
            <label>serious</label>
            <minSeverity>0.60</minSeverity>
            <vomitMtbDays>.45</vomitMtbDays>
            <capMods>
                <li>
                    <capacity>Consciousness</capacity>
                    <offset>-0.25</offset>
                </li>
                <li>
                    <capacity>BloodFiltration</capacity>
                    <offset>-0.50</offset>
                </li>
                <li>
                    <capacity>BloodPumping</capacity>
                    <offset>-0.30</offset>
                </li>
            </capMods>
            <hediffGivers>
                <li Class="HediffGiver_Random">
                    <hediff>Carcinoma</hediff>
                    <mtbDays>60</mtbDays>
                    <canAffectAnyLivePart>true</canAffectAnyLivePart>
                </li>
            </hediffGivers>
        </li>

        <li>
            <label>extreme</label>
            <minSeverity>0.80</minSeverity>
            <vomitMtbDays>0.35</vomitMtbDays>
            <capMods>
                <li>
                    <capacity>Consciousness</capacity>
                    <setMax>0.10</setMax>
                </li>
                <li>
                    <capacity>Consciousness</capacity>
                    <offset>-0.25</offset>
                </li>
                <li>
                    <capacity>BloodFiltration</capacity>
                    <setMax>0.10</setMax>
                </li>
                <li>
                    <capacity>BloodPumping</capacity>
                    <setMax>.4</setMax>
                </li>
            </capMods>
            <hediffGivers>
                <li Class="HediffGiver_Random">
                    <hediff>Carcinoma</hediff>
                    <mtbDays>20</mtbDays>
                    <canAffectAnyLivePart>true</canAffectAnyLivePart>
                </li>
            </hediffGivers>
        </li>
    </stages>
</HediffDef>

 <RecipeDef ParentName="SurgeryFlesh">
    <defName>CureRad</defName>
    <label>anti-rad neutroamine infusion</label>
    <description>This special medical operation uses a massive dose of Neutroamine. It binds and clears the radioactive substances, allowing for a much quicker recovery than normal.</description>
    <workerClass>Recipe_RemoveHediff</workerClass>
    <jobString>Infusing RadAway.</jobString>
    <workAmount>2000</workAmount>
    <hideBodyPartNames>true</hideBodyPartNames>
    <isViolation>false</isViolation>
    <targetsBodyPart>false</targetsBodyPart>
    <removesHediff>SEG_RadBuildup</removesHediff>
    <successfullyRemovedHediffMessage>{0} has successfully cured {1}'s Radiation.</successfullyRemovedHediffMessage>
    <skillRequirements>
      <Medicine>5</Medicine>
    </skillRequirements>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Neutroamine</li>
          </thingDefs>
        </filter>
        <count>5</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <categories>
        <li>Neutroamine</li>
      </categories>
    </fixedIngredientFilter>
  </RecipeDef>
</Defs>